@model NoviaReport.Models.Activity
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdateActivity</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <fieldset>
            <legend>Modifier une activité : </legend>

            @Html.LabelFor(m => Model.Date)
            @Html.TextBoxFor(m=>Model.Date,"{0:yyyy-MM-dd}" ,new{@type="date"})
            <br />


            @Html.LabelFor(m => Model.TypeActivity)
            <select id="TypeActivity" name="TypeActivity">
                <option value="">Type d'Activité</option>
                @foreach (var item in Enum.GetValues(typeof(NoviaReport.Models.TypeActivity)))
                {
                    bool typeActivityIsChecked = false;

                    if (Model.TypeActivity.Equals(item))
                    {
                        typeActivityIsChecked = true;
                    }
                    <option value=@item name="TypeActivity" selected=@typeActivityIsChecked>@item</option>
                }
            </select>
            <br />

            @Html.LabelFor(m => Model.Halfday)
            @Html.CheckBoxFor(m => m.Halfday)
            <br />

            @Html.LabelFor(m => Model.Client)
            <select id="Client" name="Client">
                <option value="">Client</option>
                @foreach (var item in Enum.GetValues(typeof(NoviaReport.Models.Client)))
                {
                    bool clientIsChecked = false;

                    if (Model.Client.Equals(item))
                    {
                        clientIsChecked = true;
                    }
                    <option value=@item name="Client" selected=@clientIsChecked>@item</option>
                }
            </select>
            <p>Choisir un client seulement pour une activité de type : Astreinte, Prestation ou Maintenance</p>
            <br />

            <input type="submit" value="Modifier" />
        </fieldset>
        <a href="/CRA/UpDateActivity"></a>
    }

</body>
</html>