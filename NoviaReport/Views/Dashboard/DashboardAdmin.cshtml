@model List<NoviaReport.Models.User>
@{
    Layout = null;
}
@*A actualiser*@

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminDashboard</title>
</head>
<body>
    @*Permet à un utilisateur qui a plusieurs roles de changer de Dashboard*@
    @foreach (NoviaReport.Models.Role role in ViewData["UserRolesList"] as List<NoviaReport.Models.Role>)
    {
        if (role.TypeRole == NoviaReport.Models.TypeRole.SALARIE)
        {
            <a href="/Dashboard/DashboardSalarie/@User.Identity.Name">Aller sur la vue Salarié</a>
        }
        else if (role.TypeRole == NoviaReport.Models.TypeRole.MANAGER)
        {
            <a href="/Dashboard/DashboardManager/@User.Identity.Name">Aller sur la vue Manager</a>
        }
    }

    <table border="1">
        <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Login</th>
            <th>Fonction</th>
            @*<th>Role</th>*@
            <th>Modifier</th>
        </tr>
        @foreach (NoviaReport.Models.User user in ViewData["UserList"] as List<NoviaReport.Models.User>)
        {
            <tr>
                <td>@user.Firstname</td>
                <td>@user.Lastname</td>
                <td>@user.Login</td>
                <td>@Html.DisplayFor(u=>user.ProfessionalInfo.Function)</td>
                @*<td>@Html.DisplayFor(u=>user.Role.TypeRole)</td>*@
                <td><a href="/User/UpdateUser/@user.Id">Modifier</a></td>
            </tr>
        }
    </table>
    <a href="/User/CreateUser">Ajouter un nouvel utilisateur</a>
</body>
</html>
