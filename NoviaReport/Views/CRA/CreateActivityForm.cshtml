@model NoviaReport.Models.Activity
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add activity</title>
    <link href="/css/StyleCreateActivityForm.css" rel="stylesheet" />
</head>
<body>

    @using (Html.BeginForm())
    {
        <fieldset>
            <legend>Ajouter une activité : </legend>
            
            <div class="Corps_formulaire">

                <div class="groupe">

                    @Html.LabelFor(m => Model.Date)
                    @Html.TextBoxFor(m=>Model.Date,"{0:yyyy-MM-dd}" ,new{@type="date"})
                    @*@Html.ValidationMessageFor(m => Model.Date)*@                   

                </div>
                

                <div class="groupe">
                    @Html.LabelFor(m => Model.TypeActivity)
                    <select id="TypeActivity" name="TypeActivity" class="choix">
                        <option value="">Type d'Activité</option>
                        @foreach (var item in Enum.GetValues(typeof(NoviaReport.Models.TypeActivity)))
                        {
                            <option value=@item name="TypeActivity">@item</option>
                        }
                    </select>
                </div>
                
                
                <div class="groupe">
                    @Html.LabelFor(m => Model.Client)
                    <select id="Client" name="Client" class="choix">
                        <option value="">Client</option>
                        @foreach (var item in Enum.GetValues(typeof(NoviaReport.Models.Client)))
                        {
                            <option value=@item name="Client">@item</option>
                        }
                    </select>
                </div>
               
                
                
                <div class=" = button">

                    <input type="hidden" value="@ViewBag.CRAid" name="CRAid">
                    <input type="submit" value="Ajouter" />


                </div>
                

            </div>
            
        </fieldset>
        @*<button> <a href="/Dashboard/DashboardSalarie">Retour à la liste d'activités</a></button>*@
    }

</body>
</html>